<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/rp_shape_corner"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size132px"
        >

        <ImageButton
            android:id="@+id/ib_choose_pay_back"
            style="@style/DialogClosedButtonStyle"
            android:background="@drawable/rp_back_arrow_grey"
            />

        <TextView
            style="@style/DialogTitleStyle"
            android:text="@string/choose_pay_type_title"
            />
    </RelativeLayout>

    <View style="@style/DividerStyle"/>

    <com.easemob.redpacketui.recyclerview.widget.RecyclerView
        android:id="@+id/pay_type_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/money_bg_color"
        android:scrollbars="vertical"
        />

    <View
        style="@style/DividerStyleNoHead"
        android:layout_marginBottom="@dimen/size69px"
        />

</LinearLayout>